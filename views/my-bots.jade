extends layout

block container
	.page-header
		h1 Hello, #{user.name}!
	
	.panel.panel-default
		.panel-body
			h2 My Bots
			
		.panel-body
			.btn-toolbar
				.btn-group
					a.btn.btn-primary(href='/my-bots/new') New Bot
				
		.list-group
			for bot in bots
				a.list-group-item(href='/bots/#{bot.id}/edit') #{bot.name}
